# Bcon Server Configuration
# Copy this file to .env and customize the values

# Security Secrets (REQUIRED - Generate secure random strings)
ADAPTER_SECRET=your_32_character_minimum_adapter_secret_here_change_this
CLIENT_SECRET=your_32_character_minimum_client_secret_here_change_this

# Network Ports
BCON_CLIENT_PORT=8081
BCON_ADAPTER_PORT=8082
MINECRAFT_PORT=25565
BLUEMAP_PORT=8100
DASHBOARD_PORT=3000

# Minecraft Server Configuration
MINECRAFT_VERSION=1.20.4
MINECRAFT_MEMORY=4G
MINECRAFT_SERVER_NAME=Bcon Demo Server
MINECRAFT_SERVER_ID=demo_server
MINECRAFT_DIFFICULTY=normal
MINECRAFT_GAMEMODE=survival
MINECRAFT_PVP=false
MINECRAFT_ONLINE_MODE=false
MINECRAFT_MAX_PLAYERS=20

# Authentication Tokens (Generated by token_gen)
SYSTEM_CLIENT_TOKEN=generate_with_token_gen_system_role
MINECRAFT_ADAPTER_TOKEN=generate_with_token_gen_adapter_role
DEMO_PLAYER_TOKEN=generate_with_token_gen_player_role

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_BLUEMAP=true
ENABLE_DASHBOARD=true
ENABLE_METRICS=false